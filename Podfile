project 'Base.xcodeproj'

# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Base' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  inhibit_all_warnings!
  
  # Pods for Base
  pod 'Alamofire'
  pod 'AlamofireImage'
  pod 'SwiftyJSON'
  pod 'ObjectMapper'
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'PureLayout'
  pod 'PopupKit'
  pod 'Device'
  pod 'NVActivityIndicatorView'
  
  target 'BaseTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'Example' do
  use_frameworks!
  inhibit_all_warnings!
  
  pod 'Alamofire'
  pod 'AlamofireImage'
  pod 'SwiftyJSON'
  pod 'ObjectMapper'
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'PureLayout'
  pod 'PopupKit'
end
